{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "debug build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-O0",
                "-std=c++20",
                "C:/C++/JumpyMagician/src/*.cpp",
                "-g3",
                "-Wall",
                "-IC:/C++/JumpyMagician/include",
                "-IC:/SDL-w64/include/SDL2",
                "-LC:/SDL-w64/lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-o",
                "C:/C++/JumpyMagician/build/JumpyMagician.exe",
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
            
        },
        {
            "label": "release build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-O3",
                "-g0",
                "-std=c++20",
                "C:/C++/JumpyMagician/src/*.cpp",
                "-Wall",
                "-IC:/C++/JumpyMagician/include",
                "-IC:/SDL-w64/include/SDL2",
                "-LC:/SDL-w64/lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-o",
                "C:/C++/JumpyMagician/build/JumpyMagician.exe",
            ],
            "group":"build",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}